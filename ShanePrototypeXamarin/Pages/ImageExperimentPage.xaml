<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="Black" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ShanePrototypeXamarin.ImageExperimentPage">
	<ContentPage.Content>
        <AbsoluteLayout>
            <ActivityIndicator 
                IsRunning="{Binding Source={x:Reference image}, Path=IsLoading }"
                Color="White"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 100, 100" AbsoluteLayout.LayoutFlags="All"/>
            <Image 
                x:Name="image"
                Aspect="AspectFit"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All"/>
        </AbsoluteLayout>
	</ContentPage.Content>
</ContentPage>
